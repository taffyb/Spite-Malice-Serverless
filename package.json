  },
  "homepage": "https://github.com/taffyb/Spite-Malice-Server#readme",
  "dependencies": {
    "aws-sdk": "^2.815.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "s-n-m-lib": "^1.3.13",
    "socket.io": "^2.3.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/dotenv": "^6.1.1",
