    "@types/uuid": "^3.4.9",
    "chai": "^4.2.0",
    "fs-extra": "^8.1.0",
    "mocha": "^6.2.3",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.3",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7"
  }
